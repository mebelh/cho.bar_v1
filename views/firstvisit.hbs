<div class="content-auth-page">
    <div class="auth_login">
        <h5>Авторизация</h5>
        <div class="row ">
            <form class="col s12" method="POST" action="/auth/login">
                <div class="row">
                    <div class="input-field col s12">
                        <input id="login" name="login" type="text" class="validate">
                        <label for="login">Логин</label>
                    </div>
                </div>
                <div class="row">
                    <div class="input-field col s12">
                        <input id="password" name="password" type="password" class="validate">
                        <label for="password">Пароль</label>
                    </div>
                </div>
                <button class="waves-effect waves-light btn" type="submit">Войти</button>
            </form>
        </div>
        <form action="/auth/register" method="GET">
            <p>нет аккаунта?</p>
            <button class="waves-effect waves-light btn" type="submit">Зарегистрироваться</button>
        </form>
    </div>

    {{>rightImages}}
</div>